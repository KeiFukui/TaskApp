<!-- フォーム -->
<%= form_for @project do |f| %>

<p>
    <!-- ラベル -->
    <%= f.label :title %> <br>
    <!-- フィールド -->
    <%= f.text_field :title %> <br>

    <!-- エラー存在チェック -->
    <% if @project.errors.any? %>
        <!-- エラー情報取得 -->
        <%= @project.errors.messages[:title][0] %>
    <% end %>

</p>

<p>
    <!-- サブミット -->
    <%= f.submit %> <br>
</p>

<% end %>
